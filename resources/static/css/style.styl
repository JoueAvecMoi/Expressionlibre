body
  width 100%
  margin 0

@font-face
  font-family 'Oxygen', sans-serif
  font-family 'Courgette', cursive

h1
  text-align center
  font-family 'Oxygen', sans-serif
  margin-top 50px
  color white

h2
  font-size 1.1em
  font-family 'Oxygen', sans-serif
  text-align center
  margin-bottom 100px
  color white

p
  font-family 'Oxygen', sans-serif

#sidebar p
  color white
  text-align center

#boutons_home
  text-align center
  margin-bottom 10px

#lienFeedback
  position absolute
  bottom 0
  right 5%
  background-color grey
  padding 5px 10px 5px 10px

a.boutonFeedback
  font-family 'Oxygen', sans-serif
  text-decoration none
  color black

.message
  font-family 'Oxygen', sans-serif
  font-size 1em

#zone_de_jeu
  float left
  background url("/static/images/texture.png") repeat
  width 100%
  height 100%
  z-index -1

#paper
  width 100%
  height 100%
  position absolute

#sidebar
  position fixed
  left 0
  background url("/static/images/texture_dark.png") repeat
  height 50%
  float left
  width 48%
  padding 0 1% 0 1%
  z-index 1

#about
 background url("/static/images/texture.png") repeat

#about h1
  color black

#saisie_texte
  position absolute

#compteur
  float right
  margin-right 5%
  margin-top 2%

#messages .message
  position absolute
  z-index 1

#cursors .cursor
	position absolute
	width 19px
	height 24px
	background:url("/static/images/curseur.png") no-repeat

#texte_about
  margin 50px auto 30px auto
  width 90%
  max-width 700px

.lien_about
  text-align center
  font-family: 'Oxygen', sans-serif
  
.lien_about a
  color grey

.lien_retour_about
  text-align center
  font-family: 'Oxygen', sans-serif

#feedback
  background url("/static/images/texture.png") repeat
  text-align center
  font-family: 'Oxygen', sans-serif

#feedback h1
  color black

#emailFeedback
  width 30%
  margin-top 15px

#messageFeedback
  width 30%
  height 25%

#social
  text-align center

#boutonTwitter
  margin-left 20px

