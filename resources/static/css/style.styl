body
  width 10000px
  height 10000px
  margin 0

@font-face
  font-family 'Oxygen', sans-serif
  font-family 'Courgette', cursive

p
  font-family 'Oxygen', sans-serif

#windowSetter
  position absolute
  top 5000px
  left 5000px

/* sidebar */

#sidebar
  position fixed
  margin-top 2%
  margin-left 2%
  background url("/static/images/texture_dark.png") repeat
  height 270px
  float left
  width 280px
  padding 0 1% 0 1%
  z-index 10

  @media all and (max-device-width: 480px)
    width 100%
    margin-top 0
    margin-left 0
    padding 0
    height 200px

#sidebar br
  @media all and (max-device-width: 480px)
    display none

#sidebar p
  color white
  text-align center
  
#logo
  text-align center
  font-family 'Oxygen', sans-serif
  margin-top 15px
  color white

#logo
  @media all and (max-device-width: 480px)
    font-size 2em

#social
  text-align center
  margin-top 20px

  @media all and (max-device-width: 480px)
    display none

#boutonTwitter
  margin-left 20px

/* zone d'expression */

#zone_de_jeu
  float left
  background url("/static/images/texture.png") repeat
  width 100%
  height 100%
  z-index 1

#compteur
  width 110px
  position fixed
  right 2%
  margin-top 2%
  text-align center
  background-color #E6E6FA
  padding-right 10px
  padding-left 10px
  z-index 10

  @media all and (max-device-width: 480px)
    position fixed
    bottom 0
    left 0
    height 31px
    margin-top 0

#compteur p
  @media all and (max-device-width: 480px)
    margin auto
    padding-top 4px

#saisie_texte
  position absolute

#messages .message
  position absolute
  font-family 'Oxygen', sans-serif
  font-size 1em

#cursors .cursor
  position absolute
  width 19px
  height 24px
  background:url("/static/images/curseur.png") no-repeat

/* page about */
  
#about
 background url("/static/images/texture.png") repeat

#about h1
  font-family 'Oxygen', sans-serif
  text-align center
  color black

#texte_about
  margin 10% auto 30px auto
  width 90%
  max-width 700px

.lien_retour_about
  text-align center
  font-family: 'Oxygen', sans-serif

.lien_about
  width 40%
  margin auto
  font-family: 'Oxygen', sans-serif
  margin-bottom 10px
  background-color silver
  padding 5px 10px 5px 10px

a.boutonAbout
  font-family 'Oxygen', sans-serif
  text-decoration none
  color black
  padding 0px 5px 0px 5px

/*formulaire mailchimp page about*/

#mc_embed_signup2
  text-align center
  margin-top 30px

#mce-EMAIL2
  display inline-block !important
  width 40%

  @media all and (max-device-width: 480px)
    width 60%

#mc-embedded-subscribe2
  display inline-block !important

/* page feedback */

#feedback
  background url("/static/images/texture.png") repeat
  text-align center
  font-family: 'Oxygen', sans-serif

#feedback h1
  color black
  margin-top 7%

#emailFeedback
  width 30%
  margin-top 3%

  @media all and (max-device-width: 480px)
    width 90%

#messageFeedback
  width 30%
  height 25%

  @media all and (max-device-width: 480px)
    width 90%

#lienFeedback
  position fixed
  bottom 0
  right 2%
  z-index 10
  background-color silver
  padding 5px 10px 5px 10px

  @media all and (max-device-width: 480px)
    position fixed 
    right 0

a.boutonFeedback
  font-family 'Oxygen', sans-serif
  text-decoration none
  color black

