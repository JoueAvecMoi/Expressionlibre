body
  width 100%
  margin 0

@font-face
  font-family 'Oxygen', sans-serif
  font-family 'Courgette', cursive

h2
  font-size 1.1em
  font-family 'Oxygen', sans-serif
  text-align center
  margin-bottom 100px
  color white

p
  font-family 'Oxygen', sans-serif

.lien_about
  width 40%
  margin auto
  font-family: 'Oxygen', sans-serif
  margin-bottom 10px
  background-color silver
  padding 5px 10px 5px 10px

a.boutonAbout
  font-family 'Oxygen', sans-serif
  text-decoration none
  color black
  padding 0px 5px 0px 5px

#lienFeedback
  position absolute
  bottom 0
  right 2%
  background-color silver
  padding 5px 10px 5px 10px

a.boutonFeedback
  font-family 'Oxygen', sans-serif
  text-decoration none
  color black

.message
  font-family 'Oxygen', sans-serif
  font-size 1em

#zone_de_jeu
  float left
  background url("/static/images/texture.png") repeat
  width 100%
  height 100%
  z-index -1

#paper
  width 100%
  height 100%
  position absolute

#sidebar
  position fixed
  margin-top 2%
  margin-left 2%
  background url("/static/images/texture_dark.png") repeat
  height 270px
  float left
  width 280px
  padding 0 1% 0 1%
  z-index 10

#logo
  text-align center
  font-family 'Oxygen', sans-serif
  margin-top 15px
  color white

#sidebar p
  color white
  text-align center

#about
 background url("/static/images/texture.png") repeat

#about h1
  text-align center
  color black
  margin-top 50px

#saisie_texte
  position absolute

#compteur
  float right
  text-align center
  width 110px
  margin-right 2%
  margin-top 2%
  background-color #E6E6FA
  border 2px solid silver
  padding-right 10px
  padding-left 10px
  z-index 10

#messages .message
  position absolute
  z-index 1

#cursors .cursor
  position absolute
  width 19px
  height 24px
  background:url("/static/images/curseur.png") no-repeat

#texte_about
  margin 50px auto 30px auto
  width 90%
  max-width 700px

.lien_retour_about
  text-align center
  font-family: 'Oxygen', sans-serif

#feedback
  background url("/static/images/texture.png") repeat
  text-align center
  font-family: 'Oxygen', sans-serif

#feedback h1
  color black

#emailFeedback
  width 30%
  margin-top 15px

#messageFeedback
  width 30%
  height 25%

#social
  text-align center
  margin-top 20px

#boutonTwitter
  margin-left 20px

